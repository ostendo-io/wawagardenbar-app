# Docker Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# ============================================
# Database Configuration
# ============================================
MONGODB_URI=mongodb://admin:changeme@mongodb:27017/wawa-garden-bar?authSource=admin
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000
SESSION_SECRET=your_secure_random_session_secret_at_least_32_characters_long

# ============================================
# Payment Gateway - Monnify
# ============================================
MONNIFY_API_KEY=your_monnify_api_key
MONNIFY_SECRET_KEY=your_monnify_secret_key
MONNIFY_CONTRACT_CODE=your_monnify_contract_code
MONNIFY_BASE_URL=https://api.monnify.com

# ============================================
# Payment Gateway - Paystack
# ============================================
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# ============================================
# Email Configuration
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=Wawa Garden Bar <noreply@wawagardenbar.com>

# ============================================
# Instagram Integration (Optional)
# ============================================
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# ============================================
# Additional Settings
# ============================================
# Uncomment and configure as needed
# REDIS_URL=redis://redis:6379
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info
