# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=wawa_garden_bar

# Authentication
SESSION_PASSWORD=complex-password-at-least-32-characters-long
SESSION_COOKIE_NAME=wawa_session

# Email Service (Zoho)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@wawacafe.com

# Payment Gateway (Monnify)
MONNIFY_API_KEY=your_api_key
MONNIFY_SECRET_KEY=your_secret_key
MONNIFY_CONTRACT_CODE=your_contract_code
MONNIFY_BASE_URL=https://sandbox.monnify.com
MONNIFY_WEBHOOK_SECRET=your_webhook_secret

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Storage
UPLOAD_DIR=./public/uploads

# Feature Flags
ENABLE_CARD_PAYMENT=true
ENABLE_TRANSFER_PAYMENT=true
ENABLE_USSD_PAYMENT=true
ENABLE_PHONE_PAYMENT=true
ENABLE_REWARDS_SYSTEM=true
ENABLE_DELIVERY=true
